<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/destinationItemTextEmptyMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/destinationItemTextEmptyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/TextEmptyDestination"
        android:text="@string/destination_item_empty"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/destinationItemTextEmptyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/destination_item_empty_action"
        style="@style/ButtonEmptyDestination"
        app:layout_constraintTop_toBottomOf="@id/destinationItemTextEmptyMessage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>